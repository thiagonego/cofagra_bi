			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>br.com.cofagra.bi.util.JpaSchemaExport</mainClass>
					<arguments>
						<argument>persistence_unit_erp</argument>
						<argument>${project.build.directory}/classes/META-INF/schema.sql</argument>
						<argument>true</argument>
						<argument>true</argument>
					</arguments>
				</configuration>
			</plugin>			

		</plugins>
