				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<server>${project.build.finalName}</server>
					<path>/${project.build.finalName}</path>
					<url>http://localhost:8080/${project.build.finalName}</url>
				</configuration>
